<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="7dp">

    <ImageView
        android:id="@+id/plantimage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="34dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/plantname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="16sp"
        android:text="ROSE"
        android:textColor="#000000"
        android:fontFamily="@font/ralewaymedium"
        android:layout_marginStart="17dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="50dp"
        android:layout_toEndOf="@+id/plantimage" />
    <TextView
        android:id="@+id/waterdetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:textSize="12sp"
        android:textColor="#4e4e4e"
        android:text="Last watered at 3:14 pm"
        android:fontFamily="@font/ralewaymedium"
        android:layout_marginStart="17dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="50dp"
        android:layout_toEndOf="@+id/plantimage" />

    <TextView
        android:id="@+id/removeplant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/ralewaysemibold"
        android:text="REMOVE"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textColor="#FF4E4E"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/waterplant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="9dp"
        android:layout_toStartOf="@+id/removeplant"
        android:fontFamily="@font/ralewaysemibold"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="WATER PLANT"
        android:textColor="#4ECAFF"
        android:textSize="12sp" />

</RelativeLayout>